{
    "name": "vscode-cfn-lint",
    "description": "CloudFormation Linter",
    "author": "Kevin DeJong",
    "license": "Apache-2.0",
    "version": "0.1.0",
    "publisher": "kddejong",
    "repository": {
        "type": "git",
        "url": "https://github.com/awslabs/aws-cfn-lint-visual-studio-code.git"
    },
    "bugs": {
        "url": "https://github.com/awslabs/aws-cfn-lint-visual-studio-code/issues"
    },
    "engines": {
        "vscode": "^1.18.0"
    },
    "categories": [
        "Other"
    ],
    "activationEvents": [
        "onLanguage:yaml",
        "onLanguage:json"
    ],
    "main": "./out/src/extension",
    "scripts": {
        "vscode:prepublish": "cd ../server && npm run compile && cd ../tslint && tsc -p ./",
        "compile": "tsc -p ./",
        "watch": "tsc -w -p ./",
        "update-vscode": "node ./node_modules/vscode/bin/install",
        "postinstall": "node ./node_modules/vscode/bin/install"
    },
    "dependencies": {
        "vscode": "^1.1.5",
        "vscode-languageclient": "^3.4.2"
    },
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "CloudFormation Linter configuration",
            "properties": {
                "cfnLinter.path": {
                    "type": "string",
                    "default": "cfn-lint",
                    "description": "Path to cfn-lint"
                }
            }
        }
    }
}
